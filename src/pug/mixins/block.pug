mixin block(value, tag, url)
	case tag
		when 'p': p&attributes(attributes): != value
		when 'span': span&attributes(attributes): != value
		when 'b': b&attributes(attributes): != value
		when 'i': i&attributes(attributes): != value
		when 'a': a(href=url)&attributes(attributes): != value
		default: div&attributes(attributes): != value

